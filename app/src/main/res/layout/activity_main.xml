                        </LinearLayout>
                        -->

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="+ 알람 추가"
                            android:textSize="20dp"
                            android:textColor="@color/normal_text"
                            android:backgroundTint="@color/background">
                        </Button>

                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="알람 설정"
                        android:textSize="20dp"
                        android:textColor="@color/normal_text"
                        android:gravity="left|center"
                        android:backgroundTint="@color/background_A">

                    </Button>

                </LinearLayout>


            </LinearLayout>

            <!-- 타이머 알람 탭 레이아웃 -->
            <LinearLayout
                android:id="@+id/tab_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/endtimetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="종료 시각 : 오후 00:00"
                        android:fontFamily="@font/nanumbarun_gothic_ultra_light"
                        android:layout_marginTop="30dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        ></TextView>

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:timePickerMode="spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></TimePicker>
                </LinearLayout>
                <!-- 버튼 영역 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >

                        <Button
                            android:id="@+id/add1hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:text="+1 hour"
                            android:textColor="@color/white"
                            android:textSize="20dp"></Button>
                        <Button
                            android:id="@+id/add30min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+30 min"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:textColor="@color/white"
                            ></Button>
                        <Button
                            android:id="@+id/add10min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+10 min"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:textColor="@color/white"
                            ></Button>
                        <Button
                            android:id="@+id/add5min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+5 min"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:textColor="@color/white"
                            ></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <Button
                            android:id="@+id/startTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="타이머 시작"
                            android:textSize="20dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:textColor="@color/white"
                            ></Button>
                        <Button
                            android:id="@+id/reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="초기화"
                            android:textSize="20dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/normal_text"
                            android:fontFamily="@font/nanumgoding"
                            android:textColor="@color/white"
                            ></Button>
                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>



        </FrameLayout>
    </LinearLayout>

</TabHost>