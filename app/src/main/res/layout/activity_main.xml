                                    android:textSize="15dp"
                                    android:textColor="@color/normal_text"
                                    android:gravity="bottom">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:text="00:00"
                                    android:textSize="35dp"
                                    android:textColor="@color/normal_text"
